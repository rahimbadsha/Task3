<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:padding="25dp"
	android:background="@color/output_bg_center"
	tools:context = ".EditprofileActivity">
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_edit_name"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		android:hint = "@string/register_name_hint"
		android:layout_marginTop = "16dp"
		android:textColorHint="@android:color/white"
		android:drawableStart="@drawable/ic_person_black_24dp"
		android:drawablePadding="5dp"
		android:textColor="@android:color/white"
		android:backgroundTint="@android:color/white"
		android:inputType = "text" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_edit_phone"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_edit_name"
		app:layout_constraintStart_toStartOf = "@id/et_edit_name"
		android:hint = "@string/register_phone_hint"
		android:layout_marginTop = "16dp"
		android:textColorHint="@android:color/white"
		android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
		android:drawablePadding="5dp"
		android:textColor="@android:color/white"
		android:backgroundTint="@android:color/white"
		android:inputType = "phone" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_edit_email"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_edit_phone"
		app:layout_constraintStart_toStartOf = "@id/et_edit_phone"
		android:hint = "@string/register_email_hint"
		android:layout_marginTop = "16dp"
		android:textColorHint="@android:color/white"
		android:drawableStart="@drawable/ic_mail_black_24dp"
		android:drawablePadding="5dp"
		android:textColor="@android:color/white"
		android:backgroundTint="@android:color/white"
		android:inputType = "textEmailAddress" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_edit_pass"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_edit_email"
		app:layout_constraintStart_toStartOf = "@id/et_edit_email"
		android:hint = "@string/register_pass_hint"
		android:layout_marginTop = "16dp"
		android:textColorHint="@android:color/white"
		android:drawableStart="@drawable/ic_lock_black_24dp"
		android:drawablePadding="5dp"
		android:textColor="@android:color/white"
		android:backgroundTint="@android:color/white"
		android:inputType = "textPassword" />
	
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_edit_repeatPass"
		app:layout_constraintTop_toBottomOf = "@+id/et_edit_pass"
		app:layout_constraintStart_toStartOf = "@id/et_edit_pass"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:hint = "@string/register_repeat_pass_hint"
		android:layout_marginTop = "16dp"
		android:textColorHint="@android:color/white"
		android:drawableStart="@drawable/ic_lock_black_24dp"
		android:drawablePadding="5dp"
		android:textColor="@android:color/white"
		android:backgroundTint="@android:color/white"
		android:inputType = "textPassword" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_edit_webUrl"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_edit_repeatPass"
		app:layout_constraintStart_toStartOf = "@id/et_edit_repeatPass"
		android:hint = "@string/register_web_url"
		android:textColorHint="@android:color/white"
		android:drawableStart="@drawable/ic_web_black_24dp"
		android:drawablePadding="5dp"
		android:textColor="@android:color/white"
		android:backgroundTint="@android:color/white"
		android:layout_marginTop = "16dp" />
	
	<androidx.appcompat.widget.AppCompatButton
		android:id = "@+id/button_edit"
		android:layout_width = "200dp"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@id/et_edit_webUrl"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		android:text = "@string/edit_button_text1"
		android:padding="10dp"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:background="@color/colorPrimary"
		android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>