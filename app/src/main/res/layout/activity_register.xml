<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:background = "@drawable/app_background"
	tools:context = ".RegisterActivity">
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/et_register_name"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		android:hint = "@string/register_name_hint"
		android:background="@drawable/edit_input_bg"
		android:textColorHint="@android:color/white"
		android:textColor="@android:color/white"
		android:ems="10"
		android:padding="15dp"
		android:drawableStart="@drawable/ic_person_black_24dp"
		android:drawablePadding="5dp"
		android:layout_marginTop="16dp"
		android:inputType = "text" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_register_phone"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_register_name"
		app:layout_constraintStart_toStartOf = "@id/et_register_name"
		android:hint = "@string/register_phone_hint"
		android:background="@drawable/edit_input_bg"
		android:textColorHint="@android:color/white"
		android:textColor="@android:color/white"
		android:ems="10"
		android:padding="15dp"
		android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
		android:drawablePadding="5dp"
		android:layout_marginTop="16dp"
		android:inputType = "phone" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_register_email"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_register_phone"
		app:layout_constraintStart_toStartOf = "@id/et_register_phone"
		android:hint = "@string/register_email_hint"
		android:background="@drawable/edit_input_bg"
		android:textColorHint="@android:color/white"
		android:textColor="@android:color/white"
		android:ems="10"
		android:padding="15dp"
		android:drawableStart="@drawable/ic_mail_black_24dp"
		android:drawablePadding="5dp"
		android:layout_marginTop="16dp"
		android:inputType = "textEmailAddress" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_register_pass"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_register_email"
		app:layout_constraintStart_toStartOf = "@id/et_register_email"
		android:hint = "@string/register_pass_hint"
		android:background="@drawable/edit_input_bg"
		android:textColorHint="@android:color/white"
		android:textColor="@android:color/white"
		android:ems="10"
		android:padding="15dp"
		android:drawableStart="@drawable/ic_lock_black_24dp"
		android:drawablePadding="5dp"
		android:layout_marginTop="16dp"
		android:inputType = "textPassword" />
	
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_register_repeatPass"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_register_pass"
		app:layout_constraintStart_toStartOf = "@id/et_register_pass"
		android:hint = "@string/register_repeat_pass_hint"
		android:background="@drawable/edit_input_bg"
		android:textColorHint="@android:color/white"
		android:textColor="@android:color/white"
		android:ems="10"
		android:padding="15dp"
		android:drawableStart="@drawable/ic_lock_black_24dp"
		android:drawablePadding="5dp"
		android:layout_marginTop="16dp"
		android:inputType = "textPassword" />
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id = "@+id/et_register_webUrl"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:layout_constraintTop_toBottomOf = "@+id/et_register_repeatPass"
		app:layout_constraintStart_toStartOf = "@id/et_register_repeatPass"
		android:hint = "@string/register_web_url"
		android:background="@drawable/edit_input_bg"
		android:textColorHint="@android:color/white"
		android:textColor="@android:color/white"
		android:ems="10"
		android:padding="15dp"
		android:drawableStart="@drawable/ic_web_black_24dp"
		android:drawablePadding="5dp"
		android:layout_marginTop="16dp"/>
	
	<androidx.appcompat.widget.AppCompatButton
		android:id = "@+id/button_register"
		android:layout_width = "300dp"
		android:layout_height = "wrap_content"
		android:text = "@string/register_button_text1"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		android:layout_marginBottom="20dp"
		android:padding="10dp"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:background="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>